<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT"
     name="UTA"
     displayName="UTA"
     version="1.0" />
    <documentation>
        <description>This module contains UTA solvers (UTA-G, UTAMP-1, UTAMP-2)</description>
        <contact>Jakub Tomczak (jakub.tomczak@live.com)</contact>
        <url></url>
        <reference></reference>
    </documentation>
    <parameters>
		<input id="criteria" name="criteria" displayName="Description of criteria">
			<documentation>
				<description>A list of criteria.</description>
			</documentation>
			<xmcda tag="criteria">
                <![CDATA[	
                    <criteria>
                        <criterion id="[...]" name="[...]">
                            <scale>
                                <quantitative>
                                    <preferenceDirection>[...]</preferenceDirection>
                                </quantitative>
                            </scale>
                        </criterion>
                    </criteria>
                ]]>
            </xmcda>
		</input>

		<input id="criteriaValues" name="criteriaValues" displayName="Criteria values" isoptional="1">
			<documentation>
				<description>
                Options of the criteria. Criteria values with id="characteristicPoints" 
                keeps values of the number of the characteristic points on the criteria.
                </description>
			</documentation>
			<xmcda tag="criteriaValues">
                <![CDATA[	
                    <criteriaValues>
                        <criterionValue>
                            <criterionID>[...]</criterionID>
                            <value>
                                <integer>[...]</integer>
                            </value>
                        </criterionValue>
                        [...]
                    </criteriaValues>
                ]]>
            </xmcda>
		</input>

		<input id="alternatives" name="alternatives" displayName="Alternative list">
			<documentation>
				<description>A list of alternatives. </description>
			</documentation>
			<xmcda tag="alternatives">
                <![CDATA[	
                    <alternatives>
                        <alternative id="[...]" name="[...]"/>
                    </alternatives>
                ]]>
            </xmcda>
		</input>

		<input id="performanceTable" name="performanceTable" displayName="performanceTable">
			<documentation>
				<description>Values of criteria for different alternatives. Values of alternatives should be non-negative real numbers.</description>
			</documentation>
			<xmcda tag="performanceTable">
                <![CDATA[
                    <performanceTable>
                        <alternativePerformances>
                            <alternativeID>[...]</alternativeID>
                            <performance>
                                <criterionID>[...]</criterionID>
                                <value>
                                        <real>[...]</real>
                                </value>
                            </performance>
                        </alternativePerformances>
                    </performanceTable>       
                ]]>
            </xmcda>
		</input>

		<input id="alternativesComparisons" name="alternativesComparisons" displayName="Comparisons between alternatives" isoptional="1">
			<documentation>
				<description>
                Pariwise comparison relations between alternatives. Alternatives are referred by their IDs.
                Type of the comparison is spcified in 'id' attribute in the 'alternativesComparisons' tag. 
                Available types of comparisons are: 'strong', 'weak', 'indifference'.
                </description>
			</documentation>
			<xmcda tag="alternativesComparisons">
                <![CDATA[
                    <alternativesComparisons id=[...]>
                        <comparisonType>[...]</comparsionType>
                        <pairs>
                            <pair>
                                <initial>
                                    <alternativeID>[...]</alternativeID>
                                </initial>
                                <terminal>
                                    <alternativeID>[...]</alternativeID>
                                </terminal>
                            </pair>
                            [...]
                        </pairs>
                    </alternativesComparisons>
                ]]>
            </xmcda>
		</input>

		<input id="methodParameters" name="methodParameters" displayName="method" isoptional="1">
			<documentation>
				<description>Which method should be used as a solver, available options { "uta-g", "utamp-1", "utamp-2"}.</description>
			</documentation>
			<xmcda tag="methodParameters">
                <![CDATA[
                    <methodParameters>
                        <parameter id="methodName" name="Name of the method that should be used in calculations.">
                            <value>
                                <label>%1</label>
                            </value>
                        </parameter>
                    </methodParameters>
                ]]>
            </xmcda>
			<gui status="preferGUI">
				<entry id="%1" type="enum" displayName="Name of method to be used as a solver.">
					<documentation>
						<description>Name of the method to be used as a solver.</description>
					</documentation>
					<items>
						<item id="utag">
							<description>UTA-G</description>
							<value>uta-g</value>
						</item>
						<item id="utamp1">
							<description>UTAMP-2</description>
							<value>utamp-1</value>
						</item>
                        <item id="utamp1">
							<description>UTAMP-1</description>
							<value>utamp-2</value>
						</item>
					</items>
					<defaultValue>1</defaultValue>
				</entry>
			</gui>
		</input>

		<output id="valueFunctions" name="valueFunctions" displayName="valueFunctions" isoptional="1">
			<documentation>
				<description>Constructed value functions for the selected criteria.</description>
			</documentation>
			<xmcda tag="criteria">
                <![CDATA[                 
                    <criteria mcdaConcept="criteria">
                        <criterion>
                            <criterionID>[...]</criterionID>
                            <criterionFunction>
                                <points>
                                    <point>
                                        <x><real>[...]</real></x>
                                        <y><real>[...]</real></y>
                                    </point>
                                </points>
                            </criterionFunction>
                        </criterion>
                    </criteria>
                ]]>
            </xmcda>
		</output>

        <output id="ranking" name="ranking" displayName="Final ranking">
            <documentation>
                <description>The best possible ranking positions that may be attained by the alternatives taking into consideration all value functions that are compatible with the preference information.</description>
            </documentation>
            <xmcda tag="alternativesValues">
                <![CDATA[
                    <alternativesValues>
						<alternativeValue>
							<alternativeID>[...]</alternativeID>
                            <values>
                                <value id="utilityValue">
                                    <real>[...]</real>
                                </value>
                                <value id="positionInRanking">
                                    <integer>[..]</integer>
                                </value>
                            </values>
						 </alternativeValue>
                        [...]
                    </alternativesValues>
                ]]>
            </xmcda>
        </output>

		<output id="messages" name="messages" displayName="messages">
			<documentation>
				<description>A list of messages generated by the algorithm.</description>
			</documentation>
			<xmcda tag="methodMessages" />
		</output>
    </parameters>
</program_description>